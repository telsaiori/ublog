<h3 class="text-center">Adding New article</h3>
<%= form_for(@article, html: { class: 'form-horizontal'}) do |f| %>

  <% if @article.errors.any? %>
    <div class="panel panel-danger col-md-offset-1">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@article.errors.count, "error") %>
            prohibited this article from being saved:
          </h2>
          
          <div class="panel-body">
            <ul>
              <% @article.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  <% end %>
  
  <div class="form-group" >
    <%= f.label :title, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
    </div>
  </div>
    
  <div class="form-group" >
    <%= f.label :body, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Body of article',row: 10, autofocus: true %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Create Article', class: 'btn btn-primary btn-lg' %> 
    </div>
  </div>

<% end %>
