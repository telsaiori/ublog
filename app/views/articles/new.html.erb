<h3 class="text-center">Adding New article</h3>
<%= form_for(@article, html: { class: 'form-horizontal'}) do |f| %>
  
  <div class="form-group" >
    <%= f.label :title, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
    </div>
  </div>
    
  <div class="form-group" >
    <%= f.label :body, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Body of article',row: 10, autofocus: true %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Create Article', class: 'btn btn-primary btn-lg' %> 
    </div>
  </div>

<% end %>
